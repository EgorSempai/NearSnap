# Пример файла переменных окружения
# Скопируйте в .env и настройте под свои нужды

# Режим работы (development/production)
NODE_ENV=production

# Порт приложения
PORT=3000

# Хост для привязки (0.0.0.0 для всех интерфейсов)
HOST=0.0.0.0

# Домен приложения (для CORS и других настроек)
DOMAIN=your-domain.com

# Максимальное количество участников в комнате
MAX_PARTICIPANTS=6

# Настройки логирования
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Настройки безопасности
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS настройки (разделенные запятыми)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com