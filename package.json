{
  "name": "zloer",
  "version": "2.0.0",
  "description": "Zloer - Connect. Play. Zloer - Видеочат для геймеров с WebRTC",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop nearsap",
    "pm2:restart": "pm2 restart nearsap",
    "pm2:logs": "pm2 logs nearsap",
    "pm2:monit": "pm2 monit",
    "docker:build": "docker build -t nearsap .",
    "docker:run": "docker run -p 3000:3000 nearsap",
    "docker:compose": "docker-compose up -d",
    "tunnel": "npx --yes localtunnel --port 3000",
    "tunnel:stable": "npx --yes localtunnel --port 3000",
    "tunnel:ngrok": "ngrok http 3000",
    "tunnel:lt": "npx --yes localtunnel --port 3000",
    "tunnel:auto": "node -e \"process.platform === 'win32' ? require('child_process').spawn('simple-tunnel.bat', [], {stdio: 'inherit'}) : require('child_process').spawn('bash', ['tunnel.sh'], {stdio: 'inherit'})\"",
    "health": "node healthcheck.js"
  },
  "keywords": [
    "webrtc",
    "videochat",
    "gaming",
    "socket.io"
  ],
  "author": "NearSnap Team",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
